}
expression_pass1
	:	primary_expr_pass1 <&$.m_TokenList>+
	;

noast
primary_expr_pass1 <rtl::CBoxListT <CToken>* $pTokenList>
	:	'{'
			{
				$pTokenList->InsertTail ($1);
			}
		primary_expr_pass1 <$pTokenList>*
		'}'
			{
				$pTokenList->InsertTail ($3);
			}
	|	'['
			{
				$pTokenList->InsertTail ($1);
			}
		primary_expr_pass1 <$pTokenList>*
		']'
			{
				$pTokenList->InsertTail ($3);
			}
	|	'('
			{
				$pTokenList->InsertTail ($1);
			}
		primary_expr_pass1 <$pTokenList>*
		')'
			{
				$pTokenList->InsertTail ($3);
			}
	|	any
			{
				$pTokenList->InsertTail ($1);
			}
	;

