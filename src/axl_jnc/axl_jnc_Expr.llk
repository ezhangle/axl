class
{
	EBinOp m_OpKind;
}
multiplicative_operator
	:	'*'
			{
				$.m_OpKind = EBinOp_Mul;
			}
	|	'/'
			{
				$.m_OpKind = EBinOp_Div;
			}
	|	'%'
			{
				$.m_OpKind = EBinOp_Mod;
			}
