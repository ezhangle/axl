multiplicative_expr <CValue* $pValue>
	local
	{
		CValue $OpValue2;
	}
	:	at_expr <$pValue>
		(multiplicative_operator $o at_expr <&$OpValue2>
			{
				return m_pModule->m_OperatorMgr.BinaryOperator ($o.m_OpKind, $pValue, $OpValue2);
