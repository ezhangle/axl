attribute_block
	enter
	{
		m_pModule->m_AttributeMgr.CreateAttributeSet ();
	}
	: '[' attribute_declarator_list ']'
	;

attribute_declarator_list 
	: attribute_declarator (',' attribute_declarator)*
	;

attribute_declarator
	: EToken_Identifier ('=' expression_pass1)?
		{
			CAttribute* pAttribute = m_pModule->m_AttributeMgr.CreateAttribute ($1.m_Data.m_String, NULL);
			if (!pAttribute)
				return false;

			pAttribute->m_Pos = $1.m_Pos;
		}
	| epsilon
	;

